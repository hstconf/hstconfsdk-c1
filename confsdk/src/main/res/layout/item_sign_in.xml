<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sign_in_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D63333">

    <LinearLayout
        android:id="@+id/item_sign_in_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <ImageView
            android:id="@+id/item_sign_in_status"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:padding="@dimen/dp_2"
            android:src="@drawable/sign_in_status"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_sign_in_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center|center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/attenders_host"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
